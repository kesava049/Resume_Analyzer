generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Resume {
  id          String   @id @default(cuid())
  filename    String
  originalUrl String?  // optional if you store file in S3
  rawText     String?  @db.Text
  analysis    Json     // structured AI output (skills, experience, etc)
  rating      Int?
  createdAt   DateTime @default(now())
}